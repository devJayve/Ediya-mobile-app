<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    >

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="#00000000"
        android:src="@drawable/back_icon_black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/register_step_icon_2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/TV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:text="회원 정보를 확인하기 위해"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backBtn" />

    <TextView
        android:id="@+id/TV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="본인 인증이"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TV1" />

    <TextView
        android:id="@+id/TV3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="필요해요"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TV2"/>

    <EditText
        android:id="@+id/nameInputET"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:hint="이름 입력"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TV3" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameInputET">

        <EditText
            android:id="@+id/birthInputET1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="생년월일 6자리"
            android:textSize="20sp"
            android:layout_weight="6"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="-"
            android:textSize="30sp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/birthInputET2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:maxLength="1"
            android:textSize="20sp"
            android:layout_weight="1"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="●●●●●●"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_weight="6"/>

    </LinearLayout>

    <RadioGroup
        android:id="@+id/mobileRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear1">

        <RadioButton
            android:id="@+id/mobileSktBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_corner_black_transparent"
            android:button="@null"
            android:padding="10dp"
            android:text="SKT"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/mobileKtBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_black_transparent"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:button="@null"
            android:text="KT"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/mobileLGBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_corner_black_transparent"
            android:button="@null"
            android:padding="10dp"
            android:text="LG U+"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/mobileCheapBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_corner_black_transparent"
            android:button="@null"
            android:padding="10dp"
            android:text="알뜰폰"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_weight="1"/>
    </RadioGroup>

    <EditText
        android:id="@+id/phoneNumberET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:hint="'-'없이 숫자만 입력"
        app:layout_constraintTop_toBottomOf="@id/mobileRadioGroup"
        android:textSize="20sp" />

    <Button
        android:id="@+id/nextStepBtn2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="다음"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@color/ediya_color"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>