<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1">
    <ImageView
        android:id="@+id/menuImgIV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/coffee_drawable_1"
        android:background="@drawable/basket_menu_background"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_weight="0.25"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.75">
        <TextView
            android:id="@+id/menuNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아메리카노"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tempTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="ICED |"/>
            <TextView
                android:id="@+id/sizeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Tall |"/>
            <TextView
                android:id="@+id/takeInOrOutTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="매장"/>
            <TextView
                android:id="@+id/basicPriceTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="4,500원"
                android:paddingRight="10dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/changeOptionBtn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="#00000000"
            android:text="옵션 변경"
            android:textAlignment="viewStart"
            android:textColor="@color/ediya_color"/>
        <TextView
            android:id="@+id/menuPriceTV"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="9000원"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="viewEnd"
            android:paddingRight="10dp"/>
    </LinearLayout>
</LinearLayout>