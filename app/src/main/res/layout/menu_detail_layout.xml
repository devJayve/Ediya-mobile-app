<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#F6F6F6"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <ScrollView
        android:id="@+id/detail_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="9">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/topLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/ediya_color">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back_icon"
                    android:background="@color/ediya_color"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/menuIVforDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coffee_test_nobackground"
                android:adjustViewBounds="true"
                android:paddingRight="100dp"
                android:paddingLeft="100dp"
                android:background="@color/ediya_color"/>
            <TextView
                android:id="@+id/menuNameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="아메리카노"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/menuNameEngTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Americano"
                android:textSize="20dp"
                android:textColor="#939393"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/menuPriceTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4500원"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#939393"
                android:layout_margin="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <Button
                    android:id="@+id/hotBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="HOT"
                    android:textSize="20sp"
                    android:textColor="@color/hot_text_selector"
                    android:background="@drawable/hot_btn_selector"/>
                <Button
                    android:id="@+id/iceBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="ICE"
                    android:textColor="@color/ice_text_selector"
                    android:background="@drawable/ice_btn_selector"
                    android:textSize="20sp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="사이즈"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="3">
                <ImageButton
                    android:id="@+id/sizeBtn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/size_btn_selector"
                    android:padding="20dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/size_btn_background"/>

                <ImageButton
                    android:id="@+id/sizeBtn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="15dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_margin="5dp"
                    android:src="@drawable/size_btn_selector2"
                    android:background="@color/size_btn_background"/>

                <ImageButton
                    android:id="@+id/sizeBtn3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/size_btn_selector3"
                    android:scaleType="fitCenter"
                    android:padding="10dp"
                    android:adjustViewBounds="true"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/size_btn_background"/>
            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#939393"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="퍼스널 옵션"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#E8E8E8"
                android:layout_margin="10dp"/>
            <Button
                android:id="@+id/freeOptionBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="무료 옵션"
                android:textSize="20sp"
                android:textAlignment="viewStart"
                android:drawableRight="@drawable/pass_icon_xml"
                android:background="#00000000"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#E8E8E8"
                android:layout_margin="10dp"/>
            <Button
                android:id="@+id/costOptionBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="유료 옵션"
                android:textSize="20sp"
                android:textAlignment="viewStart"
                android:drawableRight="@drawable/pass_icon_xml"
                android:background="#00000000"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#00000000"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/paymentLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="10dp"
        android:paddingBottom="30dp"
        android:background="@drawable/top_shadow_box"
        android:layout_weight="0.1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageButton
                android:id="@+id/detailMinusBtn_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/minus_btn_xml"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/detailQuantity_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_margin="10dp"/>
            <ImageButton
                android:id="@+id/detailPlusBtn_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/plus_btn_xml"/>
            <TextView
                android:id="@+id/totalCostInDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9000 원"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="right"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">
            <Button
                android:id="@+id/intoBasketBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_corner_ediyacolor_stroke"
                android:text="담기"
                android:textColor="@color/ediya_color"/>
            <Button
                android:id="@+id/goPaymentBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주문하기"
                android:textColor="@color/white"
                android:background="@drawable/rounded_corner_ediyacolor"
                android:paddingRight="40dp"
                android:paddingLeft="40dp"
                android:layout_margin="10dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>