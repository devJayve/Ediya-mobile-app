<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/membership_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/membership_banner" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="전화번호"
        android:textSize="40dp"
        android:textColor="#13235D"
        android:textStyle="bold"
        android:drawableStart="@drawable/phone_icon"/>

    <LinearLayout
        android:id="@+id/phoneNumLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:weightSum="1">

        <Spinner
            android:id="@+id/mobileSpinner"
            android:layout_width="74dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.2"
            android:paddingVertical="10dp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:hint="전화번호를 입력하세요."
            android:textColorHint="#F44336"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_weight="0.5"
            android:maxLength="11" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확 인"
            android:textSize="25dp"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/white"
            android:background="#13235D"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/phoneNumLayout"
        android:layout_marginTop="5dp"
        android:background="#989898"/>




</LinearLayout>