<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ediya_banner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/btnLayout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintHorizontal_weight="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/banner">

        <Button
            android:id="@+id/coffeeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_weight="1"
            android:text="COFFEE"/>

        <Button
            android:id="@+id/beverageBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:text="베버리지"/>
        <Button
            android:id="@+id/blendingTeaBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:text="블랜딩 티"/>
        <Button
            android:id="@+id/aidBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:text="에이드"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnLayout_2"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintHorizontal_weight="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnLayout">

        <Button
            android:id="@+id/shakeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_weight="1"
            android:text="쉐이크"/>

        <Button
            android:id="@+id/platinoBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:text="플랫치노"/>
        <Button
            android:id="@+id/bubbleMilkTeaBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:text="버블 밀크 티"/>
        <Button
            android:id="@+id/bakeryBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:text="베이커리"/>
    </LinearLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/btnLayout_2"
        android:layout_marginTop="5dp"
        android:background="#989898"/>

    <FrameLayout
        android:id="@+id/fragmentArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_roundedbox"
        app:layout_constraintTop_toBottomOf="@id/line1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#13235D"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/basket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장바구니"
            android:background="@drawable/rounded_corner"
            android:textColor="@color/white"
            android:drawableStart="@drawable/bakset_icon"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="65dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            />

        <Button
            android:id="@+id/paymentBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="결제하기"
            android:background="@drawable/rounded_corner"
            android:textColor="@color/white"
            android:drawableStart="@drawable/payment_icon"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>