<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_FFFFFF_131313"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/topLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/ediya_color"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageButton
            android:paddingTop="10dp"
            android:id="@+id/logoutBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:src="@drawable/back_icon"
            android:background="@color/ediya_color"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/ediya_color"
            android:layout_weight="5"/>
        <ImageButton
            android:paddingTop="10dp"
            android:id="@+id/historyBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:src="@drawable/notice_icon"
            android:background="@color/ediya_color"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/top_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/ediya_color"
        app:layout_constraintTop_toBottomOf="@id/topLinear">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/ediya_color"
            android:orientation="vertical">
            <TextView
                android:id="@+id/userIdTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/ediya_color"
                android:gravity="bottom"
                android:paddingLeft="20dp"
                android:paddingBottom="10dp"
                android:text="id"
                android:textColor="@color/fixed_white_FFFFFF_FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
        <ImageView
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ediya_banner_cut"
            android:background="@color/ediya_color"/>
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/btnScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white_background_FFFFFF_353535"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_banner">

        <LinearLayout
            android:id="@+id/btnLayout"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00000000">

            <Button
                android:id="@+id/coffeeBtn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/btn_selector"
                android:layout_weight="1"
                android:text="COFFEE"
                android:textColor="@color/text_selector"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/beverageBtn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/btn_selector"
                android:text="베버리지"
                android:textColor="@color/text_selector"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/blendingTeaBtn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/btn_selector"
                android:text="블랜딩 티"
                android:textColor="@color/text_selector"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
            <Button
                android:id="@+id/adeBtn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/btn_selector"
                android:text="에이드"
                android:textColor="@color/text_selector"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/shakeBtn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/btn_selector"
                android:layout_weight="1"
                android:text="쉐이크"
                android:textColor="@color/text_selector"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/flatccinoBtn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/btn_selector"
                android:text="플랫치노"
                android:textColor="@color/text_selector"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
            <Button
                android:id="@+id/bubbleMilkTeaBtn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/btn_selector"
                android:text="버블 밀크 티"
                android:textColor="@color/text_selector"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
            <Button
                android:id="@+id/bakeryBtn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/btn_selector"
                android:text="베이커리"
                android:textColor="@color/text_selector"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
        </LinearLayout>

        </HorizontalScrollView>

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/btnScrollView"
            android:layout_marginTop="5dp"
            android:background="#989898"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/menuRecycleView"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_background_FFFFFF_353535"
            android:layout_marginTop="10dp"
            android:clipToPadding="false"
            android:paddingBottom="300dp"
            app:layout_constraintTop_toBottomOf="@id/line1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/set_language_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/language_icon"
        android:backgroundTint="@color/ediya_light_navy_7D88BD_131F5C"
        android:layout_margin="16dp"
        app:fabSize="mini"
        app:layout_constraintTop_toTopOf="@id/setting_btn"
        app:layout_constraintBottom_toBottomOf="@id/setting_btn"
        app:layout_constraintStart_toStartOf="@id/setting_btn"
        app:layout_constraintEnd_toEndOf="@id/setting_btn"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/dark_mode_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dark_mode_icon"
        android:backgroundTint="@color/ediya_light_navy_7D88BD_131F5C"
        android:layout_margin="16dp"
        app:fabSize="mini"
        app:layout_constraintTop_toTopOf="@id/setting_btn"
        app:layout_constraintBottom_toBottomOf="@id/setting_btn"
        app:layout_constraintStart_toStartOf="@id/setting_btn"
        app:layout_constraintEnd_toEndOf="@id/setting_btn"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/setting_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/setting_icon"

        android:backgroundTint="@color/ediya_navy_131F5C_7D88BD"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toTopOf="@id/basketBtn"
        app:layout_constraintRight_toRightOf="parent"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/basketBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bakset_icon"
        android:backgroundTint="@color/ediya_navy_131F5C_7D88BD"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />





</androidx.constraintlayout.widget.ConstraintLayout>

