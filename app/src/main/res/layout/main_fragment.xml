<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ediya_banner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/btnScrollView"
        android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/banner">

            <LinearLayout
                android:id="@+id/btnLayout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/coffeeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/btn_selector"
                    android:layout_weight="1"
                    android:text="COFFEE"
                    android:textColor="@color/text_selector"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>

                <Button
                    android:id="@+id/beverageBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/btn_selector"
                    android:text="베버리지"
                    android:textColor="@color/text_selector"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>

                <Button
                    android:id="@+id/blendingTeaBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/btn_selector"
                    android:text="블랜딩 티"
                    android:textColor="@color/text_selector"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
                <Button
                    android:id="@+id/adeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/btn_selector"
                    android:text="에이드"
                    android:textColor="@color/text_selector"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>

                <Button
                    android:id="@+id/shakeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/btn_selector"
                    android:layout_weight="1"
                    android:text="쉐이크"
                    android:textColor="@color/text_selector"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>

                <Button
                    android:id="@+id/flatccinoBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_selector"
                    android:text="플랫치노"
                    android:textColor="@color/text_selector"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
                <Button
                    android:id="@+id/bubbleMilkTeaBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_selector"
                    android:text="버블 밀크 티"
                    android:textColor="@color/text_selector"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
                <Button
                    android:id="@+id/bakeryBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_selector"
                    android:text="베이커리"
                    android:textColor="@color/text_selector"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
            </LinearLayout>

        </HorizontalScrollView>

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/btnScrollView"
            android:layout_marginTop="5dp"
            android:background="#989898"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/menuRecycleView"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/line1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:clipToPadding="false"
            android:paddingBottom="300dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#13235D"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/basketBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="장바구니"
                android:background="@drawable/rounded_corner"
                android:textColor="@color/white"
                android:drawableStart="@drawable/bakset_icon"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="65dp"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                />

            <Button
                android:id="@+id/paymentBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="결제하기"
                android:background="@drawable/rounded_corner"
                android:textColor="@color/white"
                android:drawableStart="@drawable/payment_icon"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"/>
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

